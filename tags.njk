---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - event
permalink: /topics/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Topic: “{{ tag }}”"
  metaDescription: "Events tagged with the topic “{{ tag }}”"
---
<section class="intro">
  <div class="container">
    <h1>Topic: {{ tag }}</h1>
    <p>Events tagged with the topic "{{ tag }}"</p>
  </div>
</section>

<section class="container">

  {% set eventslist = collections[tag] %}

  {% for event in eventslist | reverse %}

    {% include "components/event-short.njk" %}

  {% endfor %}

</section>

{% include "components/back.njk" %}